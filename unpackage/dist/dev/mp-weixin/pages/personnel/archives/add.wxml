<view class="page"><view class="input-t "><text>分类</text><view class="tit"><picker value="{{typeindex}}" range="{{type}}" data-event-opts="{{[['change',[['bindTypeChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{type[typeindex]}}</view></picker></view></view><view class="input-t "><text>编号</text><input class="input tit" type="text" placeholder="请输入档案编号,不能为空,如:WB20201011" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','serial','$event',[]],['sendDate']]]]]}}" value="{{sendDate.serial}}" bindinput="__e"/></view><view class="input-t "><text>标题</text><input class="input tit" type="text" placeholder="请输入档案标题,不要超过25个字符" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','title','$event',[]],['sendDate']]]]]}}" value="{{sendDate.title}}" bindinput="__e"/></view><view class="input-t "><text>文件柜</text><input class="input tit" type="text" placeholder="请输入文件柜编号" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','cabinet','$event',[]],['sendDate']]]]]}}" value="{{sendDate.cabinet}}" bindinput="__e"/></view><view class="input-t "><text>文件盒</text><input class="input tit" type="text" placeholder="请输入文件盒编号" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','box','$event',[]],['sendDate']]]]]}}" value="{{sendDate.box}}" bindinput="__e"/></view><view class="input-t "><text>发文时间</text><picker mode="date" value="{{sendDate.send_time}}" data-event-opts="{{[['change',[['bindDateChange',['$event']]]],['input',[['__set_model',['$0','send_time','$event',[]],['sendDate']]]]]}}" bindchange="__e" bindinput="__e"><view class="date" style="background:none;">{{send_time||'请选择日期'}}</view></picker></view><button class="{{['confirm-btn','bg-'+themeColor.name]}}" disabled="{{btnLoading}}" loading="{{btnLoading}}" data-event-opts="{{[['tap',[['send',['$event']]]]]}}" bindtap="__e">确定提交</button></view>